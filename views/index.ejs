<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Learning Adventures</title>

  <link rel="stylesheet" href="./styles/main.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body style="background:url(./images/twilight_forest.jpeg) no-repeat center center fixed;background-size:cover;">
  <nav class="navbar navbar-default navbar-fixed-top bg-dark" style="opacity:0.7;border-color:#212121;background-color:#212121;">
    <div class="container">
      <a class="navbar-brand" style="color:#ced4e6;" href="#">waiigb</a>
    </div>
  </nav>
  <div class="container" style="margin-top:20px">
    <div class="page-header">
      <h1 class="text-color">Learning Adventures</h1>
    </div>
    <div style="height:500px;overflow:auto;">
      <% words.forEach(word => { %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <%= word.entry %> : <%= word.meaning %>
          </h4>
        </div>
        <div class="panel-body"><%= word.example %></div>
        <% if(word.citation.length) { %>
          <div class="panel-footer"><%= word.citation %></div>
        <% } %>
      </div>
      <% }); %>
    </div>
  </div>
</body>
</html>
